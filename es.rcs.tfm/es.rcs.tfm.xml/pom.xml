<project 
		xmlns="http://maven.apache.org/POM/4.0.0" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://maven.apache.org/POM/4.0.0 
			http://maven.apache.org/xsd/maven-4.0.0.xsd">
			
	<modelVersion>4.0.0</modelVersion>
	
	<artifactId>RCS-Xml</artifactId>
	<name>TFM Xml Model Module</name>
	<description>TFM Xml Model Module</description>	
	<packaging>jar</packaging>
	
	<parent>
		<groupId>es.rcs.tfm</groupId>
		<artifactId>RCS-TFM</artifactId>
		<version>0.0.3-SNAPSHOT</version>
	</parent>

	<dependencies>

		<!-- =====================================
			 SPRING
			 ===================================== -->
		<!-- FRAMEWORK -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-beans</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-oxm</artifactId>
			<scope>compile</scope>
		</dependency>
	
		<!-- =====================================
			 UTILITIES
			 ===================================== -->
		<!-- LOMBOK -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<scope>compile</scope>
		</dependency>

		<!-- =====================================
			 TEST
			 ===================================== -->
		<!-- SPRING -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- JUNIT -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		
	</dependencies>

	<build>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.jvnet.jaxb2.maven2</groupId>
					<artifactId>maven-jaxb2-plugin</artifactId>
					<version>0.14.0</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
		
			<!--
				DTD 
			 -->
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<executions>
					<execution>
						<id>JAXB-PubMed</id>
						<phase>generate-sources</phase>
						<goals><goal>generate</goal></goals>
						<configuration>

							<schemaLanguage>DTD</schemaLanguage>
							<encoding>UTF-8</encoding>
							<!-- 
							<schemas><schema><url>http://dtd.nlm.nih.gov/ncbi/pubmed/out/pubmed_190101.dtd</url></schema></schemas>
							 -->
							<schemaDirectory>${basedir}/src/main/dtd/pubmed/</schemaDirectory>
							<schemaIncludes><schemaInclude>pubmed_190101.dtd</schemaInclude></schemaIncludes>
							<accessExternalDTD>true</accessExternalDTD>

							<catalog>${basedir}/src/main/catalogs/pubmed.catalog</catalog>

							<generateDirectory>${project.build.directory}/generated-sources/jaxb_pubmed</generateDirectory>
							<generatePackage>org.pubmed.schema</generatePackage>

							<episodeFile>${project.build.directory}/generated-sources/jaxb_pubmed/META-INF/jaxb_pubmed.episode</episodeFile>

							<strict>false</strict>
							<debug>true</debug>
							<verbose>true</verbose>

						</configuration>
					</execution>
				</executions>
			</plugin>
			
 		</plugins>

	</build>
	
</project>
