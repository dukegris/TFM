<project 
		xmlns="http://maven.apache.org/POM/4.0.0" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://maven.apache.org/POM/4.0.0 
			http://maven.apache.org/xsd/maven-4.0.0.xsd">
			
	<modelVersion>4.0.0</modelVersion>
	
	<artifactId>RCS-XMLModel</artifactId>
	<name>TFM Xml Model Module</name>
	<description>TFM Xml Model Module</description>	
	<packaging>jar</packaging>
	
	<parent>
		<groupId>es.rcs.tfm</groupId>
		<artifactId>RCS-TFM</artifactId>
		<version>0.0.2-SNAPSHOT</version>
	</parent>

	<dependencies>

		<!-- =====================================
			 SPRING
			 ===================================== -->
		<!-- FRAMEWORK -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-oxm</artifactId>
			<scope>compile</scope>
		</dependency>
	
		<!-- =====================================
			 UTILITIES
			 ===================================== -->
		<!-- LOMBOK -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<scope>compile</scope>
		</dependency>

		<!-- =====================================
			 TEST
			 ===================================== -->
		<!-- SPRING -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- JUNIT -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		
	</dependencies>

	<build>

		<plugins>
		
			<!--
				BUILD FROM VARIOUS SOURCES 
			 -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.build.directory}/generated-sources/jaxb_jats</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<!--
				RESOURCES 
			 -->
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb23-plugin</artifactId>
				<version>0.14.0</version>
				<executions>
					<execution>
						<id>DTD-PubMed</id>
						<phase>generate-sources</phase>
						<goals><goal>generate</goal></goals>
						<configuration>
							<specVersion>2.2</specVersion>
							<verbose>true</verbose>
							<debug>true</debug>
							<generatePackage>es.rcs.tfm.jats</generatePackage>
        					<generateDirectory>${project.build.directory}/generated-sources/dtd_jats</generateDirectory>
							<removeOldOutput>true</removeOldOutput>
						
							<schemaLanguage>DTD</schemaLanguage>
							<schemaDirectory>${basedir}/src/main/dtd/jats-math2/</schemaDirectory>
							<schemaIncludes><include>**/*.dtd</include></schemaIncludes>
							<bindingDirectory>${basedir}/src/main/dtd</bindingDirectory>
							<bindingIncludes><bindingInclude>**/JATS-archivearticle1.dtd</bindingInclude></bindingIncludes>
							<catalog>${basedir}/src/main/dtd/jats-math2/catalog-jats-v1-2-no-base.xml</catalog>
							
							<accessExternalSchema>all</accessExternalSchema>
							<accessExternalDTD>all</accessExternalDTD>
							
							<addCompileSourceRoot>true</addCompileSourceRoot>
							<episode>false</episode>
							<strict>false</strict>
							<writeCode>true</writeCode>
							<readOnly>false</readOnly>

						</configuration>
					</execution>
				</executions>
			</plugin>
			
			
			<!-- 
				GENERATE JATS XSD
			 -->
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb23-plugin</artifactId>
				<version>0.14.0</version>
				<executions>
					<execution>
						<id>XSD-PubMed</id>
						<phase>generate-sources</phase>
						<goals><goal>generate</goal></goals>
						<configuration>
							<specVersion>2.2</specVersion>
							<verbose>true</verbose>
							<debug>true</debug>
							<generatePackage>es.rcs.tfm.jats</generatePackage>
        					<generateDirectory>${project.build.directory}/generated-sources/jaxb_jats</generateDirectory>
							<removeOldOutput>true</removeOldOutput>
						
							<schemaLanguage>XMLSCHEMA</schemaLanguage>
							<schemaDirectory>${basedir}/src/main/xsd/jats-math2/</schemaDirectory>
							<schemaIncludes><include>**/*.xsd</include></schemaIncludes>
							<bindingDirectory>${basedir}/src/main/xjb</bindingDirectory>
							<bindingIncludes><bindingInclude>**/*.xjb</bindingInclude></bindingIncludes>
							<catalog>${basedir}/src/main/catalogs/jats.cat</catalog>
							
							<accessExternalSchema>all</accessExternalSchema>
							<accessExternalDTD>all</accessExternalDTD>
							
							<addCompileSourceRoot>true</addCompileSourceRoot>
							<episode>false</episode>
							<strict>false</strict>
							<writeCode>true</writeCode>
							<readOnly>false</readOnly>

						</configuration>
					</execution>
				</executions>
			</plugin>

 		</plugins>

	</build>
	
</project>
